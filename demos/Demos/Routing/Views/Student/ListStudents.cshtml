@model List<Student>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Students</h1>
<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>First name</th>
			<th>Last name</th>
			<th>Birth Date</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Student student in Model)
		{
			<tr>
				<th>@student.Id</th>
				<th>@student.FirstName</th>
				<th>@student.LastName</th>
				<th>@student.BirthDate.ToShortDateString()</th>
			</tr>
		}
	</tbody>
</table>
